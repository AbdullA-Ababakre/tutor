.content {
  width: 640px;
  height: 100%;
  margin: 100px auto;
}

.input-wrapper {
  margin: 0 auto;
  width: 100%;
  background: #ffffff;
  border: 1px solid #f43d4f;
  border-radius: 8px;
  padding: 15px;
  box-sizing: border-box;
}
.inputHolder{
font-size: 26rpx;
font-family: PingFang SC;
color: #B2B2B2;
}



.canvas_box {
  border: 10rpx solid #D7261C;
  width: 100%;
  height: 940px;
  margin: 55px auto;
  box-sizing: border-box;
}

.btn {
  background-color: #fc4442;
  margin: 15px auto;
  width: 100%;
  font-size: 37px;
  font-weight: 500;
  color: #ffffff;
}
